<h1>Create New Heirloom Project</h1>
<%= form_with scope: :project, url: projects_path, local: true do |form| %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </p>
  <%= form.submit %>
<% end %>
